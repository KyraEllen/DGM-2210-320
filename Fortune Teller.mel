global proc string Zodiac(int $birthYear)
{
    string $signs[] = {"Rat", "'Ox", "Tiger", "Snake", "Horse", "Sheep", "Monkey", "Rooster", "Dog", "Pig"};
    
    int $index = ($birthYear - 4) % 12;

    return $signs[$index];
}

